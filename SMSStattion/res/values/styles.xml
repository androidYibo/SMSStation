<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="style_setting_label">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/setting_margin_right</item>
    </style>
    <style name="style_tip_label">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginRight">@dimen/tip_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/tip_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/tip_margin_bottom</item>
        <item name="android:textSize">18sp</item>
        
    </style>
</resources>
